<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.darshan.miwok.MainActivity">
    <TextView
            android:id="@+id/numbers_text_view"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:text="@string/numbers"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@color/color_number"
            android:layout_weight="1"
            android:padding="16dp"
            android:gravity="center_vertical"
            />

    <TextView
            android:id="@+id/family_text_view"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:text="@string/family_members"
            android:layout_weight="1"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:background="@color/color_family_members"
            android:gravity="center_vertical"
            />

    <TextView
            android:id="@+id/color_text_view"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:text="@string/colors"
            android:layout_weight="1"
            android:padding="16dp"
            android:background="@color/color_colors"
            android:gravity="center_vertical"
            />

    <TextView
            android:id="@+id/phrases_text_view"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:text="@string/phrases"
            android:layout_weight="1"
            android:padding="16dp"
            android:background="@color/color_Phrases"
            android:gravity="center_vertical"
            />
</LinearLayout>
